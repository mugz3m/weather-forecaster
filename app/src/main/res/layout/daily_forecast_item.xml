<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/daily_forecast_item_forecasted_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/daily_forecast_item_weather_weather_condition_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:contentDescription="@string/weather_condition_icon_content_description"
        app:layout_constraintEnd_toStartOf="@+id/daily_forecast_item_minimum_daily_temperature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daily_forecast_item_minimum_daily_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:layout_constraintEnd_toStartOf="@+id/daily_forecast_item_maximum_daily_temperature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daily_forecast_item_maximum_daily_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
